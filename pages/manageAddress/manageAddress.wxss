/* pages/manageAddress/manageAddress.wxss */
page{
  height: 100%;
  background: #F1F1F1;
  padding: 20rpx 20rpx 0;
  box-sizing: border-box;
}
.container{
  padding-bottom: 112rpx;
}
.address-item{
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  position: relative;
  margin-bottom: 20rpx;
}
.address-content{
  width: 560rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.address-message{
  display: flex;
  justify-content: space-between;
}
.address{
  margin-top: 22rpx;
}
.address-content .user-phone{
  font-size:28rpx;
  font-family:San-Francisco-Display-Regular;
  color:rgba(153,153,153,1);
}
.edit{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}
.edit image{
  width: 100%;
  height: 100%;
}
.add-address{
  width: 100%;
  height: 110rpx;
  background: #F1F1F1;
  padding: 0 30rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
}
.add-address view{
  width: 100%;
  background: #fff;
  text-align: center;
  padding:26rpx 0;
  font-size:30rpx;
  font-family:San-Francisco-Display-Regular;
  font-weight:400;
  color:rgba(230,27,0,1);
  border-radius: 10rpx;
}
.tap-btn{
  background: #e1e1e1!important;
}
.ifNormal{
  margin-right: 10rpx;
  border: 1rpx solid pink;
  color: red;
  font-size: 22rpx;
}