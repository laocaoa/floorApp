/* pages/goodDetail/goodDetail.wxss */
@import "../../libs/wxParse/wxParse.wxss";
.hide-tabbar{
  width: 100%;
  height: 90rpx;
  background: #fff;
  position: fixed;
  top: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 55rpx;
  box-sizing: border-box;
  z-index: 100000;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  /* border-bottom: 1rpx solid #999; */
}
.hide-tabbar view{
  width: 80rpx;
  padding-bottom: 10rpx;
  text-align: center;
}
swiper{
  width: 750rpx;
  height: 610rpx;
  position: relative;
}
.ar_coverpath{
  width: 100%;
  height: 100%;
}
.ar_coverpath image{
  width: 100%;
  height: 100%;
}
.dots{
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  width:72rpx;
  height:48rpx;
  background:rgba(0,0,0,1);
  opacity:0.5;
  border-radius:8rpx;
  display: flex;
  color: #fff;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
}
.good-message{
  width: 100%;
  padding: 24rpx 12rpx 30rpx;
  box-sizing: border-box;
}
.message-top{
  height: 52rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.message-top .price{
  display: flex;
  color: #FF0000;
  font-size: 38rpx;
  align-items:flex-end;
  height: 50rpx;
}
.price text{
  font-size: 26rpx;
}
.price-num{
  line-height:46rpx;
}
.share{
  width:110rpx;
  height:50rpx;
  background:rgba(244,244,244,1);
  border-top-left-radius: 100rpx;
  border-bottom-left-radius: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.share image{
  width: 40rpx;
  height: 40rpx;
}
.good-name{
  font-size:30rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-top: 30rpx;
}
.good-detail-message{
  height: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 30rpx;
}
.evaluate-title{
  height: 85rpx;
  padding: 0 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #E6E6E6;
}
.title-word{
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.evaluate-number{
  font-size: 24rpx;
  color: #999;
}
.evaluate-container{
  border-top: 10rpx solid #F1F1F1;
  border-bottom: 10rpx solid #F1F1F1;
  padding-bottom: 28rpx;
}
.user-logo{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10000rpx;
  overflow: hidden;
  float: left;
}
.user-logo image{
  width: 100%;
  height: 100%;
}
.evaluate-box{
  padding-left: 28rpx;
  overflow: hidden;
}
.user-name{
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(68,68,68,1);
}
.user-evaluate{
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-top: 20rpx;
}
.evaluate-item{
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #F8F8F8;
}

.check-all{
  width:370rpx;
  height:70rpx;
  font-weight:400;
  font-size:24rpx;
  line-height: 70rpx;
  border-radius:10rpx;
  margin: 30rpx auto 0;
  font-family:PingFang-SC-Regular;
  color:rgba(102,102,102,1);
  background:rgba(248,248,248,1);
  text-align: center;
}
.detail-title{
  height: 85rpx;
  padding: 0 12rpx;
  line-height: 85rpx;
  border-bottom: 1rpx solid #E6E6E6;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.bottom-btn{
  width: 750rpx;
  height: 88rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  line-height: 80rpx;
  display: flex;
  background: #fff;
  padding: 0 10rpx 8rpx;
  box-sizing: border-box;
}
.bottom-btn view{
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  width: 50%;
}
.add-cart{
  background:rgba(250,108,31,1);
}
.buy-now{
  background:rgba(231,10,36,1);
}
.active{
  color: #EB4B2D;
  border-bottom: 4rpx solid #EB4B2D;
}
.parse-view{
  font-size: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}