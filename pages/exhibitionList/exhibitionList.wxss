/* pages/exhibitionList/exhibitionList.wxss */
.search{
  height: 122rpx;
  border-bottom: 1px solid #e9e9e9;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.search input{
  position: relative;
  display: inline-block;
  width: 560rpx;
  height: 70rpx;
  background: #efefef;
  color: #999;
  border-radius: 6rpx;
  padding:0 18rpx 0 60rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}
.search .btn{
  width: 100rpx;
  height: 70rpx;
  color: #04A2AF;
  background: #efefef;
  font-size: 30rpx;
  line-height: 70rpx;
  text-align: center;
  flex-shrink: 1;
  letter-spacing: 4rpx;
  padding-left: 4rpx;
}
.search image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 10rpx;
  left: 10rpx;
}
.content{
  padding: 0 30rpx;
}
.content-item{
  padding: 26rpx 0;
  border-bottom: 1px solid #A5D8D5;
  display: flex;
  justify-content: left;
  align-items: center;
}
.content-item text{
  font-size: 28rpx;
  color: #333;
}
.content-item image{
  width: 140rpx;
  height: 140rpx;
  margin-right: 40rpx;
  border: 1px solid #e9e9e9;
}
.empty-img{
  width: 335rpx;
  height: 436rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.empty-img image{
  width: 100%;
  height: 100%;
}