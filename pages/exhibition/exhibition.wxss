/* pages/exhibition/exhibition.wxss */
.partition{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 30rpx 30rpx 14rpx;
  
}
.partition-item{
  width: 336rpx;
  height: 140rpx;
  /* background: skyblue; */
  margin-bottom: 16rpx;
  position: relative;
}
.partition-item image{
  width: 100%;
  height: 100%;
  display: initial;
  position: absolute;
  top: 0;
  left:0;
}
.partition-title{
  position: absolute;
  z-index: 20;
  font-size: 30rpx;
  color: #000;
  top: 50rpx;
  right: 55rpx;
}
.partition-item:nth-of-type(2n+1) .partition-title{
  right: 71rpx;
}