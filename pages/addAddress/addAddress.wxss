/* pages/addAddress/addAddress.wxss */
page{
  height: 100%;
  background: #F1F1F1;
  padding: 20rpx 20rpx 0;
  box-sizing: border-box;
}

image{
  width: 40rpx;
  height: 40rpx;
}
.container-item{
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #F1F1F1;
  background: #fff;
  align-items: center;
}
.holder-style{
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
}
input{
  color: #333;
  font-size: 28rpx;
  width: 600rpx;
}
.specil{
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
}
textarea{
  height: 70rpx;
  color: #333;
  font-size: 28rpx;
}
.handle{
  margin-top: 20rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.tui-picker-content{
  font-size: 28rpx;
  width: 100%;
  align-self: stretch;
}
.save{
  justify-content: center;
  margin-top: 20rpx;
  background: #EB4B2D;
  color: #fff;
  font-size: 32rpx;
  border-radius: 6rpx;
}