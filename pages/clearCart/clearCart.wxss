/* pages/clearCart/clearCart.wxss */
page{
  height:100%;
  background:#f1f1f1;
  box-sizing: border-box;
}
.container{
  padding: 20rpx 20rpx 100rpx;
}
.address-item{
  padding: 30rpx 30rpx 42rpx;
  box-sizing: border-box;
  background: #fff;
  position: relative;
  margin-bottom: 20rpx;
}
.address-content{
  width: 560rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.address-message{
  display: flex;
  justify-content: space-between;
}
.address{
  margin-top: 22rpx;
}
.address-content .user-phone{
  font-size:28rpx;
  font-family:San-Francisco-Display-Regular;
  color:rgba(153,153,153,1);
}
.beautify-tiao{
  width:100%;
  height:12rpx;
  position:absolute;
  left:0;
  bottom:0;
}
.edit{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}
.edit image{
  width: 100%;
  height: 100%;
}
.cart-list{
    position: relative;
    padding: 20rpx 20rpx 28rpx 240rpx;
    min-height: 182rpx;
    background: #fff;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 45rpx;
    height: 45rpx;
}
.cart-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 28rpx;
    width: 180rpx;
    height: 180rpx;
}
.cart-list .cart-pro-name{
    height: 132rpx;
    overflow: hidden;
    font-size:28rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
}
.cart-list .cart-pro-price{
    position: absolute;
    bottom: 20rpx;
    font-size:30rpx;
    font-weight:500;
    color:rgba(255,0,0,1);
}
.cart-list .cart-count-box{
    position: absolute;
    bottom: 20rpx;
    right: 38rpx;
    color: #aaa;
    border:1rpx solid #eee;
    border-radius:10rpx;
    display: flex;
    height: 54rpx;
    line-height: 54rpx;
}
.cart-count-down,.cart-count-add{
    font-size: 30rpx;
    width: 50rpx;
    text-align: center;
}
.cart-count-down{
  border-right: 1rpx solid #eee;
}
.cart-count-add{
  border-left: 1rpx solid #eee;
}
.cart-count-num{
    padding: 0 26rpx;
}
.cart-rmb{
  font-size: 20rpx;
}
.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding:0 200rpx 0 0;
    box-sizing: border-box;
    background: #fff;
    color: #444;
    font-size: 24rpx;
    border-bottom: 1rpx solid #E6E6E6;
}
.total-select{
    position: absolute;
    left: 40rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.clearing{
  width:200rpx;
  height:98rpx;
  background:rgba(235,75,45,1);
  position: absolute;
  right: 0;
  font-size:30rpx;
  color:rgba(255,255,255,1);
  text-align: center;
}
.cart-toatl-price{
    float: right;
    padding-right: 38rpx;
}

.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}
.sepcil-font{
  font-size: 30rpx;
  color: #FF0000;
}
.store-order .cart-rmb{
  font-size: 20rpx;
}
.express{
  padding: 30rpx 28rpx;
  background: #fff;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  font-size:28rpx;
  color:rgba(51,51,51,1);
  border-bottom: 1rpx solid #F1F1F1;
}
.remarks{
  justify-content: normal;
  align-items: center;
}
.remarks input{
  width: 500rpx;
}
.express-right{
  display: flex;
  align-items: flex-end;
}
.express-right image{
  width: 24rpx;
  height: 34rpx;
  margin-left: 20rpx;
}
.total{
  justify-content: flex-end;
}
.cover{
  height: 100%;
  width: 100%;
  position: fixed;
  background:rgba(0, 0, 0, 0.5);
  bottom: -1200rpx;
  z-index: 222;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  animation: coverShow .3s linear forwards;
}
.cover .pay{
  width: 100%;
  height: 882rpx;
  background: #fff;
  padding: 46rpx 20rpx 0;
  box-sizing: border-box;
}
.pay-title{
  text-align: center;
  font-size:32rpx;
  color:rgba(0,0,0,1);
  padding-bottom: 44rpx;
  border-bottom: 1rpx solid #F1F1F1;
}
.pay-title image{
  width: 40rpx;
  height: 40rpx;
  float: left;
}
.pay-money{
  text-align: center;
  font-size:54rpx;
  font-weight:500;
  color:rgba(0,0,0,1);
  padding: 60rpx;
}
.pay-rmb{
  font-size: 34rpx;
}
.pay-style{
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  font-size:28rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  border-bottom: 1rpx solid #F1F1F1;
}
.wxpay-logo{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.pay-btn{
  width: 710rpx;
  height:80rpx;
  background:rgba(235,75,45,1);
  border-radius:10rpx;
  position: absolute;
  bottom: 30rpx;
  font-size:30rpx;
  color:rgba(255,255,255,1);
  line-height: 80rpx;
  text-align: center;
}
@keyframes coverShow
  {
    from {bottom: -1200rpx;}
    to {bottom:0;}
  }