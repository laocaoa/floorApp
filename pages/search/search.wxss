/* pages/search/search.wxss */
.search-header{
  height: 97rpx;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 22rpx 0 16rpx;
  box-sizing: border-box;
  justify-content: space-between;
  overflow: hidden;
}
.search-header input{
  width: 566rpx;
  height: 64rpx;
  background: #efefef;
  border-radius: 6rpx;
  position: relative;
  padding-left: 50rpx;
  font-size: 24rpx;
}
.place-style{
  color: #999;
  font-size: 24rpx;
}
.search-header input icon{
  position: absolute;
  left: 14rpx;
  top: 20rpx;
}
.search-header button{
  background: transparent;
  font-size: 32rpx;
  color: #038F9B;
  padding: 0;
  margin: 0;
  letter-spacing: 2rpx;
}
.search-header button::after{
  border: none;
}
.search-history{
  padding: 22rpx 24rpx 7rpx 29rpx;
  box-sizing: border-box;
  overflow: hidden;
  border-top: 8rpx solid #F1F0F0;
  border-bottom: 8rpx solid #F1F0F0;
}
.history-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
  font-size: 32rpx;
  margin-bottom: 32rpx;
}
.deleat-box{
  width: 40rpx;
  height: 40rpx;
}
.deleat-box image{
  width: 100%;
  height: 100%
}
.history-content{
  display: flex;
  flex-wrap: wrap;
}
.history-item{
  height: 66rpx;
  font-size: 30rpx;
  color: #333;
  padding: 18rpx 24rpx;
  box-sizing: border-box;
  overflow: hidden;
  background: #f5f5f5;
  text-align: center;
  line-height: 26rpx;
  margin:0 23rpx 23rpx 0;
}
.hot-top{
  height: 87rpx;
  border-bottom: 2px solid #F1F0F0;
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.hotImgBox{
  width: 45rpx;
  height: 45rpx;
  margin-left: 4rpx;
}
.hotImgBox image{
  width: 100%;
  height: 100%;
}
.hot-item{
  font-size: 30rpx;
  color: #333;
  display: flex;
  align-items: center;
  text-align: left;
  height: 100rpx;
  border-bottom: 1px solid #F1F0F0;
  width: 345rpx;
}
.topImgBox{
 width: 44rpx;
 height: 41rpx;  
}
.hot-item-container{
  padding: 0 30rpx;
  display: flex;
  flex-wrap: wrap;
}
.topImgBox image{
  width: 100%;
  height: 100%;
}