/* pages/job/job.wxss */
.header-tab{
  height: 98rpx;
  width: 100%;
  border-bottom: 2rpx solid #e9e9e9;
  display: flex;
  justify-content: center;
}
.header-tab .tab{
  width: 344rpx;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
}
.active{
  border-bottom: 2rpx solid #04A2AF;
  color: #04A2AF; 
}
.content{
  box-sizing: border-box;
  padding: 0 30rpx;
}
.content-item{
  border-bottom: 1px solid #C9ECF0;
  padding: 36rpx 0;
}
.position{
  font-size: 30rpx;
  color:#333;
  display: flex;
  align-items: center;
}
.company{
  font-size: 26rpx;
  color: #444;
  margin-top: 30rpx;
}
.setTop{
  width: 50rpx;
  height: 30rpx;
  background: #d81e06;
  border-radius: 6rpx;
  margin-left: 12rpx;
  font-size: 18rpx;
  color: #fff;
  text-align: center;
  line-height: 30rpx;
}
.empty-img{
  width: 335rpx;
  height: 436rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.empty-img image{
  width: 100%;
}
.tips{
  color: #04A2AF;
  font-size: 30rpx;
  margin: 0 auto;
  text-align: center;
}